<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_molecules"
    app:startDestination="@+id/moleculesFragment">

    <fragment
        android:id="@+id/moleculesFragment"
        android:name="uk.gov.hmrc.sample_compose_fragments.presentation.fragment.molecules.MoleculesFragment"
        android:label="@string/title_molecules"
        tools:layout="@layout/fragment_molecules">
        <action
            android:id="@+id/action_moleculesFragment_to_insetViewFragment"
            app:destination="@id/insetViewFragment"/>
        <action
            android:id="@+id/action_moleculesFragment_to_insetTextViewFragment"
            app:destination="@id/insetTextViewFragment"/>
    </fragment>

    <fragment
        android:id="@+id/insetViewFragment"
        android:name="uk.gov.hmrc.sample_compose_fragments.presentation.fragment.molecules.InsetViewFragment"
        android:label="@string/molecules_inset"
        tools:layout="@layout/fragment_compose_example">
    </fragment>

    <fragment
        android:id="@+id/insetTextViewFragment"
        android:name="uk.gov.hmrc.sample_compose_fragments.presentation.fragment.molecules.InsetTextViewFragment"
        android:label="@string/molecules_inset_text"
        tools:layout="@layout/fragment_compose_example">
    </fragment>

</navigation>