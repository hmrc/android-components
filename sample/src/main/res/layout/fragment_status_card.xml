<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout
        android:id="@+id/content_layout"
        style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:body="@string/status_card_placeholder_body"
            app:icon="@drawable/ic_maintenance"
            app:iconTintColor="@color/hmrc_grey_1"
            app:title="@string/status_card_placeholder_title" />

        <TextView style="@style/ExampleText" />

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_example_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:body="@string/status_card_example_1_body"
            app:bodyContentDesc="@string/status_card_example_1_body_content_desc"
            app:icon="@drawable/ic_maintenance"
            app:iconTintColor="@color/hmrc_grey_1"
            app:title="@string/status_card_example_1_title" />

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_example_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:icon="@drawable/ic_info"
            app:iconTintColor="@color/hmrc_grey_1"
            app:title="@string/status_card_example_2_title" />

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_example_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:body="@string/status_card_example_3_body"
            app:childPadding="false"
            app:icon="@drawable/ic_info"
            app:iconTintColor="@color/hmrc_grey_1"
            app:title="@string/status_card_example_3_title">

            <uk.gov.hmrc.components.atom.button.PrimaryButton
                android:id="@+id/status_card_example_3_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hmrc_spacing_16"
                android:layout_marginTop="@dimen/hmrc_spacing_16"
                android:layout_marginEnd="@dimen/hmrc_spacing_16"
                android:text="@string/status_card_example_3_button_1" />

            <uk.gov.hmrc.components.atom.button.IconButton
                android:id="@+id/status_card_example_3_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_card_example_3_button_2"
                app:icon="@drawable/ic_info" />

        </uk.gov.hmrc.components.organism.status.StatusCardView>

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_example_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:icon="@drawable/ic_info"
            app:iconTintColor="@color/hmrc_grey_1"
            app:title="@string/longer_text">

            <uk.gov.hmrc.components.atom.button.PrimaryButton
                android:id="@+id/status_card_example_4_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hmrc_spacing_16"
                android:text="@string/long_text" />

        </uk.gov.hmrc.components.organism.status.StatusCardView>

        <uk.gov.hmrc.components.organism.status.StatusCardView
            android:id="@+id/status_card_example_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:body="@string/longest_text"
            app:childPadding="false"
            app:icon="@drawable/ic_coins"
            app:iconTintColor="@color/hmrc_green_1"
            app:title="@string/longer_text">

            <uk.gov.hmrc.components.atom.button.SecondaryButton
                android:id="@+id/status_card_example_5_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/long_text" />

        </uk.gov.hmrc.components.organism.status.StatusCardView>


    </LinearLayout>

</ScrollView>

