                app:body="@string/menu_panel_example_1_body"
                app:title="@string/menu_panel_example_1_title" />

            <uk.gov.hmrc.components.organism.menu.MenuPanelRowView
                android:id="@+id/menu_example_2"
                android:layout_width="match_parent"
