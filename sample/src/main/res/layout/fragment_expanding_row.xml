<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <FrameLayout style="@style/PlaceholderContainer">

            <uk.gov.hmrc.components.organism.expandable.ExpandingRowView
                android:id="@+id/expandable_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clickTogglesExpansion="false"
                app:expanded="false"
                app:icon="@drawable/ic_help_outline"
                app:subtitle="@string/expandable_placeholder_subtitle"
                app:title="@string/expandable_placeholder_title">

                <uk.gov.hmrc.components.molecule.inset.InsetTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/hmrc_spacing_16"
                    android:paddingEnd="@dimen/hmrc_spacing_16"
                    android:paddingBottom="@dimen/hmrc_spacing_16"
                    app:text="@string/expandable_placeholder_content_text" />

            </uk.gov.hmrc.components.organism.expandable.ExpandingRowView>

        </FrameLayout>

        <TextView style="@style/ExampleText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.organism.expandable.ExpandingRowView
                android:id="@+id/expandable_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clickTogglesExpansion="false"
                app:expanded="true"
                app:icon="@drawable/ic_help_outline"
                app:title="@string/expandable_example_title">

                <uk.gov.hmrc.components.molecule.inset.InsetTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/hmrc_spacing_16"
                    android:paddingEnd="@dimen/hmrc_spacing_16"
                    android:paddingBottom="@dimen/hmrc_spacing_16"
                    app:text="@string/expandable_example_content_text" />

            </uk.gov.hmrc.components.organism.expandable.ExpandingRowView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.organism.expandable.ExpandingRowView
                android:id="@+id/expandable_example_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clickTogglesExpansion="false"
                app:expanded="false"
                app:icon="@drawable/ic_help_outline"
                app:title="@string/expandable_example_2_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/hmrc_spacing_16"
                    android:paddingEnd="@dimen/hmrc_spacing_16"
                    android:paddingBottom="@dimen/hmrc_spacing_16">

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/hmrc_spacing_16"
                        android:text="@string/expandable_example_2_description_text" />

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/hmrc_spacing_16"
                        android:text="@string/expandable_example_2_bold_description_text"
                        android:textStyle="bold" />

                    <uk.gov.hmrc.components.molecule.inset.InsetTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:text="@string/expandable_example_2_content_text" />

                </LinearLayout>

            </uk.gov.hmrc.components.organism.expandable.ExpandingRowView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.organism.expandable.ExpandingRowView
                android:id="@+id/expandable_example_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_info"
                app:subtitle="@string/expandable_example_3_subtitle"
                app:subtitleContentDescription="@string/expandable_example_3_subtitle_description"
                app:title="@string/expandable_example_3_title">

                <uk.gov.hmrc.components.molecule.inset.InsetTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/hmrc_spacing_16"
                    android:paddingEnd="@dimen/hmrc_spacing_16"
                    android:paddingBottom="@dimen/hmrc_spacing_16"
                    app:text="@string/expandable_example_3_content_text" />

            </uk.gov.hmrc.components.organism.expandable.ExpandingRowView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>