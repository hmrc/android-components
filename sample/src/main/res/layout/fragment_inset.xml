<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SampleScrollView">

    <LinearLayout
        android:id="@+id/content_layout"
        style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <FrameLayout style="@style/PlaceholderContainer">

            <uk.gov.hmrc.components.molecule.inset.InsetView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inset_placeholder_text" />

            </uk.gov.hmrc.components.molecule.inset.InsetView>

        </FrameLayout>

        <TextView style="@style/ExampleText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.inset.InsetView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/hmrc_spacing_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inset_example_text_line_1_description" />

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/hmrc_spacing_4"
                        android:text="@string/inset_example_text_line_1_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hmrc_spacing_8"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inset_example_text_line_2_description" />

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/hmrc_spacing_4"
                        android:text="@string/inset_example_text_line_2_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hmrc_spacing_8"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inset_example_text_line_3_description" />

                    <TextView
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/hmrc_spacing_4"
                        android:text="@string/inset_example_text_line_3_value" />

                </LinearLayout>

            </uk.gov.hmrc.components.molecule.inset.InsetView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>