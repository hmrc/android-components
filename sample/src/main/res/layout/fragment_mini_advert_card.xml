<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout
        android:id="@+id/content_layout"
        style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <uk.gov.hmrc.components.organism.card.MiniAdvertCardView
            android:id="@+id/mini_advert_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:title="@string/title_body_cta_placeholder_button" />

        <TextView style="@style/ExampleText" />

        <uk.gov.hmrc.components.organism.card.MiniAdvertCardView
            android:id="@+id/mini_advert_example_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:title="@string/mini_advert_example_1_title" />

        <uk.gov.hmrc.components.organism.card.MiniAdvertCardView
            android:id="@+id/mini_advert_example_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            app:title="@string/mini_advert_example_2_title" />

    </LinearLayout>

</ScrollView>