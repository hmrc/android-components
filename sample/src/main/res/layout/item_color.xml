<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/hmrc_spacing_16"
    android:layout_marginEnd="@dimen/hmrc_spacing_16"
    android:layout_marginBottom="@dimen/hmrc_spacing_16">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/hmrc_spacing_16"
            android:background="@color/hmrc_dark_text">

            <View
                android:id="@+id/color_swatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                tools:background="@color/hmrc_yellow" />

        </FrameLayout>

        <TextView
            android:id="@+id/color_name"
            style="@style/Text.H5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/hmrc_spacing_16"
            android:gravity="start|center_vertical"
            tools:text="Yellow (#FFFFBF47)" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>