<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout
        android:id="@+id/content_layout"
        style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <FrameLayout style="@style/PlaceholderContainer">

            <uk.gov.hmrc.components.organism.summary.SummaryRowView
                android:id="@+id/summary_row_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="@string/summary_row_placeholder_title" />

        </FrameLayout>

        <TextView style="@style/ExampleText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            android:padding="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.container.SeparatedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerPadding="@dimen/hmrc_spacing_16"
                android:orientation="vertical"
                android:showDividers="middle">

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="@string/summary_row_example_1a_title" />

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="@string/summary_row_example_1b_title" />

            </uk.gov.hmrc.components.container.SeparatedViewContainer>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            android:padding="@dimen/hmrc_spacing_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:readerTrait="simple"
                    app:title="@string/summary_row_example_2_title" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16"
            android:padding="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.container.SeparatedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerPadding="@dimen/hmrc_spacing_16"
                android:orientation="vertical"
                android:showDividers="middle">

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="@string/longer_text" />

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="@string/longer_text" />

                <uk.gov.hmrc.components.organism.summary.SummaryRowView
                    android:id="@+id/summary_row_example_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="@string/longer_text"
                    app:titleMaxLines="2" />

            </uk.gov.hmrc.components.container.SeparatedViewContainer>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

