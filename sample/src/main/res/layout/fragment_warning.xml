<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <FrameLayout style="@style/PlaceholderContainer">

            <uk.gov.hmrc.components.molecule.warning.WarningView
                android:id="@+id/warning_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/status_card_placeholder_body" />

        </FrameLayout>

        <TextView style="@style/ExampleText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.warning.WarningView
                android:id="@+id/warning_example_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/warning_example_1_text" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.warning.WarningView
                android:id="@+id/warning_example_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/warning_example_2_text" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.warning.WarningView
                android:id="@+id/warning_example_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hmrc_blue"
                app:icon="@drawable/ic_info"
                app:iconTintColor="@color/hmrc_white"
                app:text="@string/longest_text"
                app:textColor="@color/hmrc_white" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

