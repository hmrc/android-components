<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SampleScrollView"
    android:id="@+id/scroll_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/hmrc_spacing_16">

        <TextView style="@style/ExampleText" />

        <uk.gov.hmrc.components.molecule.tabbar.TabBarView
            android:id="@+id/tab_example_1"
            style="@style/TabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginBottom="@dimen/hmrc_spacing_16" />

        <uk.gov.hmrc.components.molecule.tabbar.TabBarView
            android:id="@+id/tab_example_2"
            style="@style/TabBar.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hmrc_spacing_16" />

        <uk.gov.hmrc.components.molecule.tabbar.TabBarView
            android:id="@+id/tab_example_3"
            style="@style/TabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hmrc_spacing_16" />

    </LinearLayout>

</ScrollView>

