<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SampleScrollView">

    <LinearLayout style="@style/SampleSectionContainer">

        <TextView style="@style/PlaceholderText" />

        <FrameLayout style="@style/PlaceholderContainer">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/switch_row_placeholder_title"
                app:body="@string/switch_row_placeholder_body_off"
                app:checked="false" />

        </FrameLayout>

        <TextView style="@style/ExampleText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hmrc_spacing_16"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginEnd="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_example_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/hmrc_spacing_16"
                app:title="@string/switch_row_example_1_title"
                app:body="@string/switch_row_example_1_body"
                app:checked="false"
                app:switchContentDescription="@string/switch_row_example_1_title" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hmrc_spacing_16"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginEnd="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_example_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/hmrc_spacing_16"
                app:title="@string/switch_row_example_2_title"
                app:body="@string/switch_row_example_2_body"
                app:checked="true" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hmrc_spacing_16"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginEnd="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_example_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/hmrc_spacing_16"
                app:title="@string/switch_row_example_3_title"
                app:titleStyle="@style/Text.Body"
                app:showBody="false" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hmrc_spacing_16"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginEnd="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_example_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/hmrc_spacing_16"
                app:title="@string/switch_row_example_4_title"
                app:showBody="false" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hmrc_spacing_16"
            android:layout_marginTop="@dimen/hmrc_spacing_16"
            android:layout_marginEnd="@dimen/hmrc_spacing_16">

            <uk.gov.hmrc.components.molecule.item.SwitchRowView
                android:id="@+id/switch_row_example_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/hmrc_spacing_16"
                app:title="@string/switch_row_example_5_title"
                app:body="@string/switch_row_example_5_body" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>